{
    "version": "1.0.0",
    "name": "digiworld/digichat",
    "description": "Laravel package for DigiChat WhatsApp API integration",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "DigiChat",
            "email": "info@digiworld-dev.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "guzzlehttp/guzzle": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "Digiworld\\DigiChat\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Digiworld\\DigiChat\\DigiChatServiceProvider"
            ],
            "aliases": {
                "DigiChat": "Digiworld\\DigiChat\\Facades\\DigiChat"
            }
        }
    }
}